<h1><%= @merchant.name %>'s Bulk Discounts</h1>

<%= link_to "Create A New Bulk Discount", '/merchant/discounts/new' %>

<h3>Current Bulk Discounts</h3>

<% @merchant.discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <p>ID: <%= discount.id %></p>
    <p>Minimum Order Quantity: <%= discount.min_qty %></p>
    <p>Discount: <%= number_to_percentage(discount.percent, precision: 0) %></p>
    <%= button_to "Edit Discount", "/merchant/discounts/#{discount.id}/edit", method: :get %>
    <%= button_to "Delete Discount", '/merchant/discounts', method: :destroy %>
  <div><br>
<% end %>
